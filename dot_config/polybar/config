;################################################################
; Date Module
;################################################################
[module/date]
type = internal/date
interval = 15 

date =
date-alt = "%d/%m/%Y"

time = "%a %b %d, %I:%M %p "
time-alt = %H:%M

format-prefix-foreground = ${colors.foreground}
format-underline =

label = %date% %time%


