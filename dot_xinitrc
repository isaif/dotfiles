# hide mouse cursor
unclutter &

# start xbindkeys
# this file has keybinds for changing volume using keyboard
xbindkeys &

# this is required for gnome-keyring
# also some settings in /etc/pam.d/login
# see https://wiki.archlinux.org/title/GNOME/Keyring#PAM_step
# https://wiki.archlinux.org/title/GNOME/Keyring#Unable_to_locate_daemon_control_file
source /etc/X11/xinit/xinitrc.d/50-systemd-user.sh

exec awesome
